<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:background="@android:color/white"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/drink_id"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:id="@+id/search_beer_photo"
        android:src="@drawable/ic_action_error"
        android:layout_margin="6dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Drink Name Here"
        android:id="@+id/drink_name"
        android:textSize="22sp"
        android:layout_alignTop="@+id/search_beer_photo"
        android:layout_toRightOf="@+id/search_beer_photo"
        android:layout_toEndOf="@+id/search_beer_photo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Price: "
        android:layout_marginBottom="30dp"
        android:id="@+id/drink_description"
        android:layout_alignLeft="@+id/drink_name"
        android:layout_alignStart="@+id/drink_name"
        android:layout_alignBottom="@+id/search_beer_photo"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/price"
        android:text="5000"
        android:layout_alignBottom="@+id/drink_description"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="At Panamera"
        android:id="@+id/bar_search_name"
        android:layout_below="@+id/price"
        android:layout_alignLeft="@+id/drink_description"
        android:layout_alignStart="@+id/drink_description" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price_tag_image"
        android:src="@drawable/ic_action_tag"
        android:layout_toStartOf="@+id/price"
        android:layout_alignTop="@+id/price"
        android:layout_toLeftOf="@+id/price" />

</RelativeLayout>
