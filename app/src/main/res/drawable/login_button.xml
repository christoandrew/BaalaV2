<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="7dip" />
            <stroke android:width="7dip" android:color="#ff8800" />
            <gradient android:angle="-90" android:startColor="#ff8800" android:endColor="#ffbb33"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="3dip" android:color="@android:color/white" />
            <solid android:color="#ffbb33" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <solid android:color="@color/white" />
            <stroke android:width="1dip" android:color="#ffbb33" />
            <gradient android:angle="-90" android:startColor="#ff8800" android:endColor="#ffbb33"  />
        </shape>
    </item>
</selector>